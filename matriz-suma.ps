program MatrizSuma;

const
    filas = 3;
    columnas = 3;

var
    matriz: array[1..filas, 1..columnas] of integer;
    i, j: integer;
    suma: integer;

begin
    writeln('Carga de datos en la matriz:');
    for i := 1 to filas do
    begin
        for j := 1 to columnas do
        begin
            write('Ingrese el valor para la posicion [', i, ',', j, ']: ');
            readln(matriz[i, j]);
        end;
    end;

    writeln;
    writeln('Matriz cargada:');
    for i := 1 to filas do
    begin
        for j := 1 to columnas do
        begin
            write(matriz[i, j]:5);
        end;
        writeln;
    end;

    suma := 0;
    for i := 1 to filas do
    begin
        for j := 1 to columnas do
        begin
            suma := suma + matriz[i, j];
        end;
    end;

    writeln;
    writeln('La suma de todos los elementos de la matriz es: ', suma);
end.
